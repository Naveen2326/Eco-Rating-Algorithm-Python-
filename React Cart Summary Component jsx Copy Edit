function CartSummary({ cart }) {
  const totalFootprint = cart.reduce((acc, item) => acc + item.carbon_footprint, 0);

  return (
    <div className="p-4 rounded-xl bg-green-100">
      <h2 className="text-xl font-bold mb-2">ðŸ›’ Cart Summary</h2>
      <p>Total Items: {cart.length}</p>
      <p>Carbon Footprint: {totalFootprint.toFixed(2)} kg COâ‚‚</p>
    </div>
  );
}
